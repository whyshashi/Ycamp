<% layout('layout/boilerplate') %>



<div class="d-flex justify-content-center">
  <div>
        <div class="card" style="width: 40rem;" >
            <img src="<%=data.image%>" class="card-img-top" style="height: 30rem;" alt="image">
            <div class="card-body">
              <h5 class="card-title"><%= data.title %></h5>
              <p class="card-text"><%= data.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= data.location %></li>
              <li class="list-group-item">Price : $<%= data.price %></li>
            </ul>
            <div class="card-body">
                <h6 class="fw-light">2 Days ago</h6>
            </div>
        </div>
        
        <div class="mt-3 mb-3">
            <button type="button" class="btn btn-outline-primary"><a href="/campground" class="text-dark link-underline link-underline-opacity-0"> &#8592; </a ></button>
            <button type="button" class="btn btn-outline-primary"><a href="/campground/<%=data._id%>/update" class="text-dark link-underline link-underline-opacity-0"> update </a></button>
            <button type="button" class="btn btn-outline-primary"><a href="/campground/<%=data._id%>/delete" class="text-dark link-underline link-underline-opacity-0"> delete </a></button>
        </div>
    </div>
</div>